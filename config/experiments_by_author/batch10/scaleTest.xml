<?xml version = "1.0"?>
<experiment>
    <network type="grid">
        <size>32</size>
        <roadLength>100</roadLength>
    </network>
    <repeats>4</repeats>

    <variable var="populationSize" type="int" varType="independent">
        <min>5000</min>
        <max>30000</max>
        <interval>5000</interval>
    </variable>
    <variable var="agentMaxGreedChanges">50</variable>
    <variable var="greedEnabled" type="boolean">true</variable>
    <variable var="throttlingEnabled" type="boolean">true</variable>
    <variable var="lowerThreshold">0.5</variable>
    <variable var="upperThreshold">0.5</variable>
</experiment>